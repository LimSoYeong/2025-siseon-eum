import React, { useEffect, useState } from 'react';
import CameraScreen from './CameraScreen';

function App() {
  const [serverURL, setServerURL] = useState('');
  useEffect(() => {
    // 백엔드에서 현재 IP 받아오기
    fetch(`https://${window.location.hostname}:5000/ip`)
      .then(res => res.json())
      .then(data => {
        const fullURL = `https://${data.ip}:${data.port}`;
        console.log('서버 주소:', fullURL);
        setServerURL(fullURL);
      })
      .catch(err => console.error('서버 IP 요청 실패:', err));
  }, []);

  return (
    <div>
      <h1>:카메라: PWA 카메라 앱</h1>
      {serverURL ? (
        <CameraScreen serverURL={serverURL} />
      ) : (
        <p>서버 주소를 불러오는 중...</p>
      )}
    </div>
  );
}

export default App;